# Metode Bisection

from cmath import e
from tkinter import E

def f(x): #define fungsi f(x)
    return x**3-2*x+1 

def bagidua(a,b,e): 
    step = 1
    print('\n\n=== Metode Bagi Dua ===')
    condition = True 
    
    while condition:
        c = (a + b)/2
        print('Iterasi ke-%d, c = %0.6f dan f(c) = %0.6f' % (step, c, f(c)))

        #menentukan nilai c menggantikan a atau b
        if f(a) * f(c) < 0:  
            b = c
        else:
            a = c
        
        step = step + 1 
        condition = abs(f(c)) > e

    print('\nRequired Root is : %0.8f' % c) 

